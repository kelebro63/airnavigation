<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/green.strong</item>
        <item name="colorPrimaryDark">@color/green.deep</item>
        <item name="colorAccent">@color/green.vivid</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.TranslucentStatusBar">
        <!--can't do much on platforms before API 19-->
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TextView_DialogTitle_20sp_Bold_333333">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <!--<item name="fontPath">fonts/Nexa_Bold.otf</item>!-->
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:textSize">20sp</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">19dp</item>
    </style>

    <style name="TextView_Text_16sp_Light_333333">
        <!--used as toolbar title-->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <!--<item name="fontPath">fonts/Nexa_Light.otf</item>!-->
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextView_DialogAlert">
        <item name="android:textColor">@color/orange.vivid</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <!--<item name="fontPath">fonts/Nexa_Light.otf</item> !-->
        <item name="android:textSize">14sp</item>
    </style>

    <style name="FlatButton_LightTheme" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/flat_button_textcolor_lighttheme</item>
        <item name="android:background">@drawable/bg_flat_button</item>
       <!-- <item name="fontPath">fonts/Nexa_Bold.otf</item> !-->
        <item name="android:layout_height">36dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="Dialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!--<item name="colorPrimary">@color/green.deep</item>-->

        <!-- colorPrimaryDark is used for the status bar -->
        <!--<item name="colorPrimaryDark">@color/green.strong</item>-->

        <!-- colorAccent is used as the default value for colorControlActivated
             which is used to tint widgets -->
        <item name="colorAccent">@color/green.deep</item>
    </style>

</resources>
